{
  "name": "undeadbytes",
  "productName": "Undead Bytes",
  "version": "0.5.0",
  "description": "Shoot zombies and work your way through low-poly dungeons!",
  "author": "Chris Rowles <crowles.sdx@gmail.com>",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "prebuild": "node -p \"'export const APP_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/shared/version.js",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "build:game": "npm run prebuild && webpack --config webpack.config.js",
    "watch:game": "npm run prebuild && webpack --config webpack.config.js --watch",
    "web": "http-server dist/",
    "linux": "node ./node_modules/electron/cli.js",
    "windows": "node_modules\\electron\\dist\\electron.exe .",
    "build:exe": "npm run build:game && electron-builder --dir",
    "build:installer": "npm run build:game && electron-builder"
  },
  "devDependencies": {
    "@electron/asar": "^3.2.7",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4",
    "eslint": "^8.52.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "about-window": "^1.15.2",
    "stats.js": "^0.17.0"
  },
  "build": {
    "appId": "com.undeadbytes.app",
    "directories": {
      "output": "releases/${platform}/${arch}"
    },
    "linux": {
      "target": "deb",
      "icon": "build/resources/icon256x256.png",
      "category": "Game"
    },
    "mac": {
      "target": "pkg",
      "icon": "build/resources/icon512x512.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "build/resources/icon.ico",
      "license": "build/resources/license.txt"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true
    },
    "pkg": {
      "license": "build/resources/license.txt"
    }
  }
}
